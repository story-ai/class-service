{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2015"],
    "sourceMap": true,
    "noImplicitAny": true,
    "watch": true,
    "strict": true,
    "strictNullChecks": true,
    "preserveConstEnums": true,
    "outDir": ".build",
    "rootDir": "./"
  },
  "declaration": true
}
